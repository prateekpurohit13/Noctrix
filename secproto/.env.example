# === Core Secrets ===
# 32-byte base64 KEK (Key Encryption Key) used to wrap per-tenant DEKs.
KEK_BASE64=REPLACE_WITH_BASE64_32_BYTES

# Demo users (will be created by scripts/init_db.py if DB is empty)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@12345
ANALYST_USERNAME=analyst
ANALYST_PASSWORD=Analyst@12345

# Tenant identifier (for multi-tenant key scoping)
TENANT_ID=demo

# Retention (days)
RETENTION_RAW_UPLOAD=7
RETENTION_CLEANSED_ASSET=90
RETENTION_AUDIT=365

# Cookie / JWT
JWT_ISSUER=secproto
JWT_AUDIENCE=secproto-users
JWT_EXPIRE_MINUTES=30

# Set to 1 when serving behind TLS (Caddy/Nginx). In dev HTTP you may set 0
COOKIE_SECURE=0

# SQLite DB path (local dev)
SQLITE_PATH=./data/app.db
